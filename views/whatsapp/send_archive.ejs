<%- include('../partials/header.ejs') %>
</head>
  <body>
    <%- include('../partials/navbar.ejs') %>
      <%- include('../partials/menu.ejs') %>


        <main id="main" class="main">        
          <section class="section">
            <form action="/whatsapp/send_archive2" method="post">  
              <input type="hidden" name="codigo_mensagem" value="<%= codigo_mensagem %>">
            <div class="row">    
              <div style="text-align: center;">                  
                 <button type="submit" class="btn btn-primary" onclick="carregamento_btn()">Enviar Mensagem</button>
                </div>
                <div></div><br>
                <div style="text-align: center; display: none;" id="carregamento">
                  <button class="btn btn-primary" type="button" disabled>
                    <span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
                    <span class="sr-only"> Enviando mensagem....Aguarde... Esse processo poderár demorar bastante!</span>
                  </button>
                  <button class="btn btn-primary" type="button" disabled>
                    <span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
                    Enviando mensagem....Aguarde... Esse processo poderár demorar bastante!
                  </button>
                </div><br>

                 <br>  <% dados.forEach(body => { %> 
                  <br><br>
              <div class="col-lg-6" id="corpo">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Dados da mensagem</h5>
                   
                    <h6 class="card-title" name="mensagem" value="" >Mensagem</h6>
                    <h6 class="card-subtitle mb-2 text-muted"> </h6>
                    <p class="card-text"><%= body.mensagem %></p>
                    <div class="row">
                      <div class="col-lg-6 col-md-4 label "></div>
                      <div class="col-lg-5 col-md-8"></div>
                    </div>  
                    <div class="row">
                      <div style='font-size:12px;' class="col-lg-3 col-md-4 label">Nome</div>
                      <div style='font-size:15px;' class="col-lg-9 col-md-8"><%= body.cliente %></div>
                    </div> 
                    <div class="row">
                      <div style='font-size:12px;' class="col-lg-3 col-md-4 label">telefone</div>
                      <div style='font-size:15px;' class="col-lg-9 col-md-8"><%= body.telefone %></div>
                    </div> 
                    <div class="row">
                      <div style='font-size:12px;' class="col-lg-3 col-md-4 label">Empresa</div>
                      <div style='font-size:15px;' class="col-lg-9 col-md-8"><%= body.empresa %></div>
                    </div>                    
                  </div>
                </div>
              </div>            
              <% }); %>
            </div>
          </form>
          </section>


        </main>
        <%- include('../partials/footer.ejs') %>  
         </body>

  </html>

  <script>
    function carregamento_btn() {
      setTimeout(
        document.getElementById('carregamento').style.display = 'block',
        document.getElementById('corpo').style.display = 'none',             
      ),7000
    }
  </script>