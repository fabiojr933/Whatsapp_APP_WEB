<%- include('../../partials/header.ejs') %>
    </head>

    <body>
        <%- include('../../partials/navbar.ejs') %>
            <%- include('../../partials/menu.ejs') %>


                <main id="main" class="main">

                    <div class="pagetitle">
                        <h1 style="text-align: center;">Envio de mensagem</h1>
                    </div>
                    <% if(sucesso) {%>
                        <div class="alert alert-primary alert-dismissible fade show" role="alert">
                            <%=sucesso%>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"
                                    aria-label="Close"></button>
                        </div>
                        <% } %>
                        <% if(erro) {%>
                            <div class="alert alert-primary alert-dismissible fade show" role="alert">
                                <%=erro%>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                        aria-label="Close"></button>
                            </div>
                            <% } %>
                            <section class="section">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="card">
                                            <div class="card-body">
                                                <h5 class="card-title">Selecione os contatos para enviar a mensagem</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="row">
                                    <button type="submit" class="btn btn-primary">Enviar Mensagem</button><br>
                                    <div class="col-lg-12"><br>
                                        <div class="card">
                                            <div class="card-body">
                                                <h5 class="card-title"></h5> 
                                                      
                                               <% dados.forEach(element => { %> 
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="checkbox" checked id="inlineCheckbox1" value="<%= element.id %>">
                                                    <label class="form-check-label" for="inlineCheckbox1">Id: - <%= element.id %> - <%= element.nome %> - Telefone: - <%= element.telefone %> </label>
                                                  </div><br>
                                                <%  })  %>       
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </section>

                </main>
                <%- include('../../partials/footer.ejs') %>
    </body>

    </html>